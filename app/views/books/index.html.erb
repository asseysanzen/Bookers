<%= flash[:delete] %>
<h2>Books</h2>
<% @books.each do |book| %>
	<table width="800">
		<tr>
	    	<th width="25%">Title</th>
	    	<th width="55%">Body</th>
	    </tr>
	    <tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
			 <%= link_to "Show", book_path(book.id) %>
			</td>
			<td>
			<%= link_to "Edit", edit_book_path(book.id) %></td>
			<td>
				<%= link_to "Destroy", book_path(book), method: :delete %></td>
		</tr>
	</table>
<% end %>

<h4>New Book</h4>
	<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
<% end %>