<div class="flash"><%= flash[:delete] %></div>
<div class="header">
	<h2>Books</h2>
</div>

<div class="main_index">
	<div class="table">
		<table width="800">
			<thead>
			<tr>
	    		<th width="25%">Title</th>
	    		<th width="55%">Body</th>
	    	</tr>
	    	</thead>
	    <tbody>
		<% @books.each do |book| %>
	    	<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td>
			 	<%= link_to "Show", book_path(book.id) %>
				</td>
				<td>
				<%= link_to "Edit", edit_book_path(book.id) %>
				</td>
			    <td>
				<%= link_to "Destroy", book_path(book.id), method: :delete %>
				</td>
			</tr>
		<% end %>
		</tbody>
		</table>
	</div>


	<div class="main_index_form">
		<h4>New Book</h4>
			<% if @book.errors.any? %>
  				<div class="alert">
  				<div class="alert_head">
  					<h4><%= @book.errors.count %>
  				errors prohibited this book from being saved:</h4></div>
    			<ul>
      				<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      				<% end %>
    			</ul>
  				</div>
			<% end %>
		<%= form_for(@book) do |f| %>
		<div class="index_form">
			<p class="form_head">Title</p>
			<%= f.text_field :title %>
			<p class="form_head">Body</p>
			<%= f.text_area :body %>
		</div>
		<div class="form_create">
			<%= f.submit 'Create Book' %>
		</div>
		<% end %>
	</div>
</div>